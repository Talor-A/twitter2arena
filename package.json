{
  "name": "twitter2arena",
  "version": "1.0.0",
  "scripts": {
    "dev": "blitz build && blitz dev",
    "start": "blitz start --port ${PORT-3000}",
    "build": "yarn migrate:deploy && blitz build",
    "migrate:create": "blitz prisma migrate dev --create-only",
    "migrate:dev": "blitz prisma migrate dev --preview-feature",
    "migrate:deploy": "blitz prisma migrate deploy --preview-feature",
    "start:production": "blitz start --production --port $PORT",
    "studio": "blitz prisma studio",
    "prisma": "blitz prisma",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "copy-wasm": "cp node_modules/replicache/out/*.wasm public/"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "3.1.1",
    "blitz": "0.40.0",
    "final-form": "4.20.4",
    "react": "alpha",
    "react-dom": "alpha",
    "react-final-form": "6.5.7",
    "twitter-lite": "1.1.0",
    "zod": "3.9.5"
  },
  "devDependencies": {
    "@types/preview-email": "2.0.1",
    "@types/react": "17.0.27",
    "eslint": "7.32.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.4.1",
    "prettier-plugin-prisma": "0.15.0",
    "pretty-quick": "3.1.1",
    "preview-email": "3.0.5",
    "prisma": "3.1.1",
    "typescript": "~4.3"
  },
  "private": true
}
